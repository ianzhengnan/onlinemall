			<tx:method name="*"/>
		</tx:attributes>
	</tx:advice>
	<aop:config>
		<aop:pointcut id="omPointCut" expression="bean(userMgr)"/>
		<aop:advisor advice-ref="txAdvice" pointcut-ref="omPointCut"/>
	</aop:config> -->
	
</beans>